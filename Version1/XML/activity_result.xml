<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background3"
    tools:context=".RESULT">

    <Button
        android:id="@+id/btn_resultback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="25sp"
        android:background="@drawable/btn_enter"
        />

    <ImageView
        android:id="@+id/img_soloresult"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/img_resulttouzi1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="75dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/img_resulttouzi2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="80dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
            >
        <ImageView
            android:id="@+id/img_resulttouzi3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="75dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/img_resulttouzi4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="80dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
            >
        <ImageView
            android:id="@+id/img_resulttouzi5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="75dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/img_resulttouzi6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="80dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_soloagin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="再来一次"
        android:textSize="25sp"
        android:background="@drawable/btn_enter"
        android:layout_marginTop="40dp"
        />

</LinearLayout>